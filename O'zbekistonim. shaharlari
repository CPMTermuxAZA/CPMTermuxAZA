  <script>
    let index = 0;
    const slides = document.querySelectorAll('.slides img');

    function showSlide() {
      slides.forEach(slide => slide.classList.remove('active'));
      slides[index].classList.add('active');
      index = (index + 1) % slides.length;
    }

    setInterval(showSlide, 3000);
  </script>

